{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Depurar Mis TypeScript con Node",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "program": "${workspaceFolder}/public/dist/${fileBasenameNoExtension}.js",
            "preLaunchTask": "tsc: build - tsconfig.json",                                         
            "outFiles": ["${workspaceFolder}/public/dist/**/*.js"],            
            "sourceMaps": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
